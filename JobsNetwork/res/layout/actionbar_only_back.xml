<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/primary">

    <FrameLayout
        android:id="@+id/frame_img_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/actionbar_left"
            android:layout_width="?actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/navibar_button_default"
            android:contentDescription="@string/image_description"
            android:paddingBottom="@dimen/space_smallest"
            android:paddingLeft="@dimen/space_normal"
            android:paddingRight="@dimen/space_normal"
            android:paddingTop="@dimen/space_smallest"
            android:scaleType="center"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/actionbar_title"
        style="@style/actionbar_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/common_app_name" />

    <View
        android:id="@+id/actionbar_right"
        android:layout_width="?actionBarSize"
        android:layout_height="match_parent" />

</LinearLayout>