<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_top"
    android:padding="@dimen/space_micro">


    <ImageView
        android:id="@+id/item_top_banner_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_top_banner_height"
        android:background="@drawable/banner_item_top"
        android:contentDescription="@string/image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/item_top_banner_gradient_bg" />

    <vn.fjobs.base.view.customeview.CircleImageView
        android:id="@+id/item_top_logo_company"
        android:layout_width="@dimen/item_top_logo"
        android:layout_height="@dimen/item_top_logo"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_marginTop="@dimen/space_large"
        android:src="@drawable/dummy_logo_company" />

    <TextView
        android:id="@+id/item_top_name_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_large"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginTop="@dimen/space_largest"
        android:layout_toEndOf="@+id/item_top_logo_company"
        android:layout_toRightOf="@+id/item_top_logo_company"
        android:text="@string/name_company"
        android:textColor="@color/white"
        android:textSize="@dimen/larger_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_top_company_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_top_name_company"
        android:layout_marginLeft="@dimen/space_large"
        android:layout_marginRight="@dimen/space_large"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginTop="@dimen/space_smallest"
        android:layout_toEndOf="@+id/item_top_logo_company"
        android:layout_toRightOf="@+id/item_top_logo_company"
        android:text="@string/des_company"
        android:textColor="@color/white"
        android:textSize="@dimen/smaller_text" />

    <TextView
        android:id="@+id/item_top_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_top_banner_company"
        android:drawableLeft="@drawable/ic_view"
        android:drawableStart="@drawable/ic_view"
        android:drawablePadding="@dimen/space_micro"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_marginStart="@dimen/space_normal"
        android:textColor="@color/black"
        android:textSize="@dimen/smaller_text"
        android:text="@string/text_view" />

    <TextView
        android:id="@+id/item_top_text_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_below="@+id/item_top_text_view"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/large_text"
        android:text="@string/text_work"/>

    <TextView
        android:id="@+id/item_top_text_des_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_below="@id/item_top_text_work"
        android:layout_marginTop="@dimen/space_micro"
        android:textColor="@color/gray"
        android:textSize="@dimen/smaller_text"
        android:text="@string/text_des_work"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_top_text_des_work"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_marginStart="@dimen/space_normal"
        android:layout_marginTop="@dimen/space_smallest"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_top_text_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_position"
            android:drawableStart="@drawable/ic_position"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/space_micro"
            android:textSize="@dimen/smaller_text"
            android:textColor="@color/black"
            android:text="@string/text_position"/>

        <TextView
            android:id="@+id/item_top_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawableStart="@drawable/ic_calendar"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/space_micro"
            android:layout_marginLeft="@dimen/space_smallest"
            android:layout_marginStart="@dimen/space_smallest"
            android:textSize="@dimen/smaller_text"
            android:textColor="@color/black"
            android:text="@string/text_date"/>
    </LinearLayout>
</RelativeLayout>