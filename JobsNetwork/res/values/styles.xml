<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:divider">@android:color/holo_blue_bright</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppSplash" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- ===================== Style button ============================== -->

    <style name="button_primary_highlight" parent="@style/btn_standard_compat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_primary_highlight</item>
    </style>

    <style name="btn_standard_compat" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:paddingLeft">@dimen/space_larger</item>
        <item name="android:paddingRight">@dimen/space_larger</item>
    </style>

    <style name="button_login_by_facebook" parent="@style/btn_standard_compat">
        <item name="android:textColor">@color/btn_fb_color</item>
        <item name="android:background">@drawable/btn_login_by_facebook</item>
    </style>

    <style name="button_transparent" parent="@style/btn_standard">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="btn_standard" parent="text_large">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:paddingLeft">@dimen/space_larger</item>
        <item name="android:paddingRight">@dimen/space_larger</item>
    </style>

    <style name="button_primary" parent="@style/btn_standard_compat">
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <!-- ======================= Style Text View ====================================== -->

    <style name="text_view_secondary" parent="@style/text_view_default">
        <item name="android:textSize">@dimen/smaller_text</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
    </style>

    <style name="text_view_default" parent="text_small">
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="text_view_title" parent="@style/text_view_default">
        <item name="android:textColor">@color/heading_text_color</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
    </style>

    <style name="text_view_primary" parent="@style/text_view_default">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
    </style>

    <!--==================== Style action bar =========================-->

    <style name="actionbar_title" parent="text_large">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_large</item>
    </style>

    <style name="actionbar_title.top">
        <item name="android:textSize">@dimen/larger_text</item>
    </style>

    <style name="actionbar_badge" parent="text_small">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/micro_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">@dimen/size_notification</item>
        <item name="android:layout_height">@dimen/size_notification</item>
        <item name="android:layout_marginBottom">@dimen/space_normal</item>
        <item name="android:layout_marginLeft">@dimen/space_normal</item>
        <item name="android:background">@drawable/bg_notification</item>
    </style>

    <!--==================== Style Edit Text =========================-->

    <style name="edit_text_list_top" parent="@style/edit_text_primary">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/list_top</item>
    </style>

    <style name="edit_text_list_bottom" parent="@style/edit_text_primary">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/list_bottom</item>
    </style>

    <style name="edit_text_primary" parent="text_normal">
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:textColorHint">@color/light_text_color</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="edit_text_password" parent="@style/edit_text_primary">
        <item name="android:inputType">textPassword</item>
    </style>

    <!--==================== Style Text =========================-->

    <style name="text_small">
        <item name="android:textSize">@dimen/smaller_text</item>
        <item name="android:textColor">@color/basic_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_normal">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/basic_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/basic_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_view_accent" parent="@style/text_view_default">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_view_panel" parent="text_normal">
        <item name="android:layout_marginTop">@dimen/space_micro</item>
        <item name="android:layout_marginBottom">@dimen/space_micro</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textColor">@color/basic_text_color</item>
    </style>

    <style name="badge_textview" parent="text_small">
        <item name="android:layout_width">@dimen/space_largest</item>
        <item name="android:layout_height">@dimen/space_largest</item>
        <item name="android:layout_marginLeft">@dimen/space_larger</item>
        <item name="android:background">@drawable/bg_notification</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space_micro</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/micro_text</item>
    </style>

    <style name="text_type_sliding_menu_right_item_notification" parent="text_small">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/micro_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
    </style>

    <!-- ===================== Style list ================================ -->

    <style name="list_default">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="list_bottom" parent="@style/list_default">
        <item name="android:background">@drawable/list_bottom</item>
    </style>

    <!-- ======================= Style Edit profile =====================-->
    <style name="marginLeftRight_editProfile">
        <item name="android:layout_marginLeft">@dimen/space_normal</item>
        <item name="android:layout_marginRight">@dimen/space_normal</item>
    </style>

</resources>
